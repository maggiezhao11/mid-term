  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <link rel="stylesheet" href="/styles/resourceShow.css">

  <title>Resource Show</title>
</head>

<body>
  <h3>RESOURCE DETAILS</h3>

    <article class="resource">
      <div id="resource">
        <ul>
          <li>Title: <%= title %>  </li>
          <li>URL: <%= url %> </li>
          <li>Description: <%= description %> </li>
          <li>Category: <%= topic %> </li>
          <li>Comment: <%= comments%> </li>
          <% if (rating) { %>
            <li>Rate: <%= rating.toFixed(2) %>  </li>
          <%} else { %>
            <li>Rate: No Rating available, pls share your rate! </li>
          <%} %>
        </ul>
      </div>
      <footer class="footer-icons">
        <div class="footer-display">
          <div class="icon">
            <i class="fas fa-flag"></i>
            <i class="fas fa-retweet"></i>
            <i id="like" class="fas fa-heart"></i>
          </div>
        </div>
      </footer>
    </article>


    <h3> RATE </h3>
     <section class="new-rate">
      <form id="rate-input">
        <textarea
        class="text-area"
        placeholder=" rate!"
        name="rating"
        id="rating-text"
        ></textarea>
        <div >
          <button class="btn-submit" type="submit">Rate</button>
        </div>
      </form>
    </section>

    <h3> NEW COMMENT </h3>
    <section class="new-comment">
      <form id="comment-input">
        <textarea
        class="text-area"
        placeholder="What are you thinking about?"
        name="comment"
        id="comment-text"
        ></textarea>
        <div>
          <button class="btn-submit btn-comment" type="submit">Comment</button>
        </div>
      </form>
    </section>


    <h3> AVAILABLE COMMENTS LIST </h3>

    <div class="comments-list"> </div>

